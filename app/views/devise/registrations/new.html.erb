<% provide(:title, 'Sign Up') %>
<div class="signup">
<div class="logo">GatherYe</div>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :validate => true) do |f| %>
  <%= devise_error_messages! %>
  
  <div><%= f.label :username %>
  <%= f.text_field :username, :validate => { :presence => true} %></div>

  <div><%= f.label :email %>
  <%= f.text_field :email, :validate => { :format => true } %></div>

  <div><%= f.label :password %>
  <%= f.password_field :password, :validate => { :confirmation => false } %></div>

  <!-- <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>
 -->
  <div><%= f.submit "Sign up", :class => "button" %></div>
<% end %>

<%= render "devise/shared/links" %>

</div>

<div id="container">
<% (1..20).each do |i| %>
	<% rand1 = [*300..310].sample;
	rand2 = [*200..610].sample %>
	<%= content_tag(:div, image_tag("http://lorempixel.com/#{rand1}/#{rand2}/"), :class => "item") %>
<% end %>
</div>